      <artikel bwb-ng-variabel-deel="/Artikel1" stam-id="46193" versie-id="23879412" id="C34415351" label-id="45544" inwerking="2017-03-01" label="Artikel 1" bron="Stb.2017-53" effect="wijziging" ondertekening_bron="2017-02-10" publicatie_bron="2017-02-22" publicatie_iwt="2017-02-27" status="goed">
