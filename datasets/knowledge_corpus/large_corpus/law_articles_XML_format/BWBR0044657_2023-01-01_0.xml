      <artikel bwb-ng-variabel-deel="/ArtikelXV" stam-id="15799193" versie-id="28871402" id="C40912231" label-id="15736444" inwerking="2023-01-01" label="Artikel XV" bron="Stb.2022-345" effect="wijziging" ondertekening_bron="2022-08-22" publicatie_bron="2022-09-07" publicatie_iwt="2022-09-21" status="goed">
  <kop>
