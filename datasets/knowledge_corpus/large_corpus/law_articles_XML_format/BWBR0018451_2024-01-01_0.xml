      <artikel bwb-ng-variabel-deel="/Artikel1" stam-id="7166003" versie-id="29415222" id="C42270281" label-id="7153774" inwerking="2024-01-01" label="Artikel 1" bron="Stb.2023-168" effect="wijziging" ondertekening_bron="2023-05-12" publicatie_bron="2023-05-23" publicatie_iwt="2023-07-07" status="goed">
  <kop>
